<script>



    let html = `
                                    <div class="panel-body" id="Pharmacytransfer">
                                        <div class="col-md-6">
                                                        <div class="mb-1">
                                                            <label class="form-label" for="answers">Answers</label>
                                                            <input required="text" class="form-control"
                                                                placeholder="answers" value="" name="answer" id="answers">
                                                        </div>
                                                    </div>
    
                                        <button class="btn btn-danger" id="remove"> Remove</button> </div> 
                                        </div>
                                
                                        `;
    
    
    
    
                let maxRows = 10;
                let x = 1;
                $("#add_button").on('click', function () {
                    if (x <= maxRows) {
                        $('#append_html').append(html)
                        x++;
                    }
                })
    
    
                $("#append_html").on('click', '#remove', function (e) {
                    $(this).parent('div').remove();
                });
            </script>