      <div class="content-body">
        <!-- >>>>>>>>>>>>>>>>>>>>>>>>> COACH DETAILS  <<<<<<<<<<<<<<<<<<<<<<<<<<< -->
        <section class="app-user-edit">
          <div class="card">
            <div class="card-body">

              <div class="tab-content">
                <!-- Account Tab starts -->
