                    <!-- category image -->
                    <script>
                        imgInp.onchange = evt => {
                            const [file] = imgInp.files
                            if (file) {
                                blah.src = URL.createObjectURL(file)
                            }
                        }
                    </script>
                    <!-- validate form  -->
                    <script>
                        $(document).ready(function () {
                            // alert("vikas")
                            $("#validate").validate({
                                rules: {

                                    question: {
                                        required: true,
                                    },

                                }, messages: {

                                    question: {
                                        required: " Please enter a question",
                                    },
                                }
                            });
                        });  
                    </script>
                    <script>
                        $("#validate input").on("keypress", function (e) {
                            if (e.which === 32 && !this.value.length)
                                e.preventDefault();
                        });
                        $("#validate textarea").on("keypress", function (e) {
                            if (e.which === 32 && !this.value.length)
                                e.preventDefault();
                        });
                    </script>