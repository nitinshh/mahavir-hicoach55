                <!-- BEGIN: Content-->
                <div class="app-content content ">
                    <div class="content-overlay"></div>
                    <div class="header-navbar-shadow"></div>
                    <div class="content-wrapper container-xxl p-0">
                        <div class="content-header row">
                            <div class="content-header-left col-md-9 col-12 mb-2">
                                <div class="row breadcrumbs-top">
                                    <div class="col-12">
                                        <h2 class="content-header-title float-start mb-0">Questions Add</h2>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="content-body">
                            <section class="app-user-edit">
                                <div class="card">
                                    <div class="card-body">

                                        <div class="tab-content">
                                            <!-- Account Tab starts -->
                                            <div class="tab-pane active" id="account" aria-labelledby="account-tab"
                                                role="tabpanel">
                                                <!-- users edit start -->
                                                <!-- users edit account form start -->
                                                <form id="validate" action="/admin/questionsadd" method="post"
                                                    class="form-validate" novalidate="novalidate"
                                                    enctype="multipart/form-data">

                                                    <div class="col-md-6">
                                                        <div class="mb-1">
                                                            <label class="form-label" for="question">Questions
                                                                Type</label>
                                                            <select name="type" id="" class="form-control">
                                                                <option value="0">None Description</option>
                                                                <option value="1">Description</option>
                                                            </select>
                                                            <!-- <input required="text" class="form-control"
                                                                placeholder="Question" value="" name="question"
                                                                id="question"> -->
                                                        </div>
                                                    </div>

                                                    <div class="col-md-6">
                                                        <div class="mb-1">
                                                            <label class="form-label" for="question">Questions</label>
                                                            <input required="text" class="form-control"
                                                                placeholder="Question" value="" name="question"
                                                                id="question">
                                                        </div>
                                                    </div>

                                                    <div class="col-12 d-flex flex-sm-row flex-column mt-2">
                                                        <button type="submit"
                                                            class="btn btn-primary mb-1 mb-sm-0 me-0 me-sm-1 waves-effect waves-float waves-light">Save
                                                            Changes</button>
                                                        <a href="/admin/questionslisting"
                                                            class="btn btn-danger mb-1 mb-sm-0 me-0 me-sm-1 waves-effect waves-float waves-light">Back</a>
                                                    </div>

                                                </form>
                                                <!-- users edit account form ends -->
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </section>

                        </div>
                    </div>
                </div>



                <!-- END: Content-->
